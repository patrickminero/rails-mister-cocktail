<div class="container-fluid">
  <div class="m-auto" style="width: 90%">
    <h1 class="heading text-muted">My favorite cocktails</h1>
    <div class="row d-flex justify-content-around">
      <%  @cocktails.each do |cocktail| %>
      <% photo = "https://loremflickr.com/320/240/#{cocktail.name}" %>
        <div class="card m-1 col-12 col-lg-3 p-0">
          <img src=<%= photo %> class="card-img-top" alt="">
          <div class="card-body d-flex justify-content-between">
            <%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
            <%= link_to 'Delete',
                cocktail_path(cocktail),
                method: :delete,
                data: { confirm: "Are you sure?" }, class: 'text-danger' %>
          </div>
        </div>
      <% end %>  
    </div>
  </div>
</div>